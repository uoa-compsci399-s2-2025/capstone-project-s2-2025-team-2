{
  "entryFile": "src/index.ts",
  "noImplicitAdditionalProperties": "throw-on-extras",
  "controllerPathGlobs": ["src/presentation-layer/controllers/**"],
  "spec": {
    "outputDirectory": "src/middleware/__generated__",
    "specVersion": 3,
    "securityDefinitions": {
      "jwt": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT",
        "description": "enter 'Bearer {Firebase ID token}'"
      }
    },
    "security": [{ "jwt": [] }]
  },
  "compilerOptions": {
    "baseUrl": "src"
  },
  "routes": {
    "routesDir": "src/middleware/__generated__",
    "authenticationModule": "src/business-layer/security/Authentication.ts"
  }
}
