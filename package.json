{
  "name": "tsoa-boilerplate",
  "version": "1.0.0",
  "description": "TSOA Boilerplate",
  "private": true,
  "scripts": {
    "dev-server": "pnpm --filter server start",
    "dev-client": "pnpm --filter client dev",
    "dev": "run-p dev-server dev-client",
    "format": "prettier --write \"**/*.{js,ts,tsx,jsx,json,css,md}\" --ignore-path .gitignore",
    "prettier": "prettier --check \"**/*.{js,ts,tsx,jsx,json,css,md}\" --ignore-path .gitignore",
    "lint": "eslint \"client/**/*.{ts,tsx}\" \"server/**/*.{ts,js}\" --fix",
    "lint:check": "eslint \"client/**/*.{ts,tsx}\" \"server/**/*.{ts,js}\"",
    "lint:all": "eslint . --ext .ts,.tsx,.js --fix"
  },
  "workspaces": [
    "client",
    "server"
  ],
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@types/node": "^22.14.0",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "eslint": "^9.32.0",
    "eslint-config-next": "15.4.4",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^16.3.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.38.0"
  },
  "packageManager": "pnpm@10.7.1+sha512.2d92c86b7928dc8284f53494fb4201f983da65f0fb4f0d40baafa5cf628fa31dae3e5968f12466f17df7e97310e30f343a648baea1b9b350685dafafffdf5808"
}
