{
  "name": "tsoa-boilerplate",
  "version": "1.0.0",
  "description": "TSOA Boilerplate",
  "private": true,
  "scripts": {
    "dev:server": "pnpm --filter server start",
    "dev:client": "pnpm --filter client dev",
    "dev": "run-p dev:server dev:client",
    "storybook": "pnpm --filter client storybook",
    "build:storybook": "pnpm --filter client build-storybook",
    "format": "prettier --write \"**/*.{js,ts,tsx,jsx,json,css,md}\"",
    "prettier": "prettier --check \"**/*.{js,ts,tsx,jsx,json,css,md}\"",
    "lint": "eslint \"client/**/*.{ts,tsx}\" \"server/**/*.{ts,js}\" --fix",
    "lint:check": "eslint \"client/**/*.{ts,tsx}\" \"server/**/*.{ts,js}\"",
    "lint:all": "eslint . --ext .ts,.tsx,.js --fix",
    "build": "pnpm --filter server build && pnpm --filter client build",
    "build:server": "pnpm --filter server build",
    "build:client": "pnpm --filter client build"
  },
  "workspaces": [
    "client",
    "server"
  ],
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@types/node": "^22.14.0",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "eslint": "^9.32.0",
    "eslint-config-next": "15.4.4",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^16.3.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.38.0"
  },
  "packageManager": "pnpm@10.7.1"
}
